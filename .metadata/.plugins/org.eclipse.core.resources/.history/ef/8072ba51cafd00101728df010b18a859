package io.isiflix.isispring.util;

import java.time.LocalDateTime;

public class IsiLogger {
	
	public static final String GREEN = "\u001B[32m";
	public static final String YELLOW = "\\u001B[33m\"";
	public static final String WHITE = "\\u001B[37m\"";
	public static final String RESET = "\\u001B[om\"";
	
	public static void log(String modulo, String mensagem) {
		LocalDateTime date = LocalDateTime.now();
		System.out.printf(GREEN + "15%" + YELLOW + "%-30s: "+ WHITE +"%s\n"+ RESET,date,modulo,mensagem);
	}

}
